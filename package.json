{
  "name": "the-empire-affiliate-marketing-hub",
  "private": true,
  "version": "0.0.0",
  "type": "module",

  "engines": {
    "node": ">=18"
  },

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "tsx server.js",
    "server:watch": "tsx watch server.js",
    "dev:full": "concurrently \"npm run server\" \"wait-on http://localhost:3000 --timeout 15000 && npm run dev\"",
